<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--************************************************************************
    * Data Sets
    *************************************************************************-->

    <bean id="dataset.pagerank.static.dbpedia.pages" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/pages.dbpedia.txt"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/pages.dbpedia.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="dataset.pagerank.static.dbpedia.links" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/out.dbpedia-all"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/links.dbpedia.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="dataset.pagerank.static.flickr.pages" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/pages.flickr.txt"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/pages.flickr.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="dataset.pagerank.static.flickr.links" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/out.flickr-growth"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/links.flickr.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <!--************************************************************************
    * Experiments
    *************************************************************************-->

    <!-- output of kmeans -->
    <bean id="pagerank.output" class="org.peelframework.core.beans.data.ExperimentOutput">
        <constructor-arg name="path" value="${system.hadoop-3.path.output}/pagerank.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="experiment.pagerank.dbpedia" parent="experiment.pagerank" abstract="true">
        <constructor-arg name="inputs">
            <set>
                <ref bean="dataset.pagerank.static.dbpedia.pages" />
                <ref bean="dataset.pagerank.static.dbpedia.links" />
            </set>
        </constructor-arg>
        <constructor-arg name="config">
            <value><![CDATA[
                pagerank.graph = "dbpedia"
            ]]></value>
        </constructor-arg>
    </bean>

    <bean id="experiment.pagerank.flickr" parent="experiment.pagerank" abstract="true">
        <constructor-arg name="inputs">
            <set>
                <ref bean="dataset.pagerank.static.flickr.pages" />
                <ref bean="dataset.pagerank.static.flickr.links" />
            </set>
        </constructor-arg>
    </bean>

    <!-- pagerank experiment with fixed dataset -->
    <bean id="experiment.pagerank" parent="experiment.flink-1.6.2" abstract="true">
        <constructor-arg name="command">
            <value><![CDATA[
              -v -c org.apache.flink.examples.java.graph.PageRank  \
              ${app.path.apps}/kmeans-flink-jobs-1.0-SNAPSHOT.jar \
              --pages ${system.hadoop-3.path.input}/pages.${pagerank.graph}.txt \
              --links ${system.hadoop-3.path.input}/links.${pagerank.graph}.txt \
              --output ${system.hadoop-3.path.output}/pagerank.txt \
              --numPages ${pagerank.numpages} \
              --iterations 3
            ]]></value>
        </constructor-arg>
        <constructor-arg name="outputs">
            <set value-type="org.peelframework.core.beans.data.ExperimentOutput">
                <ref bean="pagerank.output"/>
            </set>
        </constructor-arg>
    </bean>

    <!--************************************************************************
    * Suites
    *************************************************************************-->

    <!-- suite for local development and testing -->
    <bean id="pagerank.default.dbpedia" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list value-type="org.peelframework.core.beans.experiment.Experiment">
                <bean parent="experiment.pagerank.dbpedia">
                    <constructor-arg name="name" value="pagerank.default.dbpedia"/>
                    <constructor-arg name="config">
                        <value><![CDATA[
                                  system.flink.config.parallelism         = 1
                                  system.flink.config.numberOfTaskSlots   = 1
                                  pagerank.graph = "dbpedia"
                                  pagerank.numpages = 3966924
                                ]]></value>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <bean id="pagerank.default.flickr" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list value-type="org.peelframework.core.beans.experiment.Experiment">
                <bean parent="experiment.pagerank.flickr">
                    <constructor-arg name="name" value="pagerank.default.flickr"/>
                    <constructor-arg name="config">
                        <value><![CDATA[
                                  system.flink.config.parallelism         = 1
                                  system.flink.config.numberOfTaskSlots   = 1
                                  pagerank.graph = "flickr"
                                  pagerank.numpages = 2302925
                                ]]></value>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <!-- suite for KALEAO -->
    <bean id="pagerank.scale-out.dbpedia" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <bean class="org.peelframework.core.beans.experiment.ExperimentSequence">
                <constructor-arg name="paramName" value="topXXX-X"/>
                <constructor-arg name="paramVals">
                    <list>
                        <value>top001-1</value>
                        <value>top001-2</value>
                        <value>top001-4</value>
                        <value>top002-1</value>
                        <value>top002-2</value>
                        <value>top002-4</value>
                        <value>top004-1</value>
                        <value>top004-2</value>
                        <value>top004-4</value>
                        <value>top008-1</value>
                        <value>top008-2</value>
                        <value>top008-4</value>
                        <value>top015-1</value>
                        <value>top015-2</value>
                        <value>top015-4</value>
                    </list>
                </constructor-arg>
                <constructor-arg name="prototypes">
                    <list value-type="org.peelframework.core.beans.experiment.Experiment">
                        <bean parent="experiment.pagerank.dbpedia">
                            <constructor-arg name="name" value="pagerank.__topXXX-X__.dbpedia"/>
                            <constructor-arg name="config">
                                <value><![CDATA[
                                  system.default.config.slaves            = ${env.slaves.__topXXX-X__.hosts}
                                  system.flink.config.parallelism         = ${env.slaves.__topXXX-X__.total.parallelism}
                                  system.flink.config.numberOfTaskSlots   = ${env.slaves.__topXXX-X__.per-node.numberOfTaskSlots}
                                  pagerank.graph = "dbpedia"
                                  pagerank.numpages = 3966924
                                ]]></value>
                            </constructor-arg>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="pagerank.scale-out.flickr" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <bean class="org.peelframework.core.beans.experiment.ExperimentSequence">
                <constructor-arg name="paramName" value="topXXX-X"/>
                <constructor-arg name="paramVals">
                    <list>
                        <value>top001-1</value>
                        <value>top001-2</value>
                        <value>top001-4</value>
                        <value>top002-1</value>
                        <value>top002-2</value>
                        <value>top002-4</value>
                        <value>top004-1</value>
                        <value>top004-2</value>
                        <value>top004-4</value>
                        <value>top008-1</value>
                        <value>top008-2</value>
                        <value>top008-4</value>
                        <value>top015-1</value>
                        <value>top015-2</value>
                        <value>top015-4</value>
                    </list>
                </constructor-arg>
                <constructor-arg name="prototypes">
                    <list value-type="org.peelframework.core.beans.experiment.Experiment">
                        <bean parent="experiment.pagerank.flickr">
                            <constructor-arg name="name" value="pagerank.__topXXX-X__.flickr"/>
                            <constructor-arg name="config">
                                <value><![CDATA[
                                  system.default.config.slaves            = ${env.slaves.__topXXX-X__.hosts}
                                  system.flink.config.parallelism         = ${env.slaves.__topXXX-X__.total.parallelism}
                                  system.flink.config.numberOfTaskSlots   = ${env.slaves.__topXXX-X__.per-node.numberOfTaskSlots}
                                  pagerank.graph = "flickr"
                                  pagerank.numpages = 2302925
                                ]]></value>
                            </constructor-arg>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

</beans>