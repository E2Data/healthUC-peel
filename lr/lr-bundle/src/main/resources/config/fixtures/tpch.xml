<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--************************************************************************
    * Data Sets
    *************************************************************************-->

    <bean id="dataset.tpch.static.lineitem" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/lineitem.tbl"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/lineitem.tbl"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="dataset.tpch.static.customer" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/customer.tbl"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/customer.tbl"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <bean id="dataset.tpch.static.orders" class="org.peelframework.core.beans.data.CopiedDataSet">
        <constructor-arg name="src" value="${app.path.datasets}/orders.tbl"/>
        <constructor-arg name="dst" value="${system.hadoop-3.path.input}/orders.tbl"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <!--************************************************************************
    * Experiments
    *************************************************************************-->

    <!-- output of kmeans -->
    <bean id="tpch.output" class="org.peelframework.core.beans.data.ExperimentOutput">
        <constructor-arg name="path" value="${system.hadoop-3.path.output}/results.txt"/>
        <constructor-arg name="fs" ref="hdfs-3.1.1"/>
    </bean>

    <!-- kmeans experiment with fixed dataset -->
    <bean id="experiment.tpchq3" parent="experiment.flink-1.6.2" abstract="true">
        <constructor-arg name="command">
            <value><![CDATA[
              -v -c org.apache.flink.examples.java.relational.TPCHQuery3  \
              ${app.path.apps}/kmeans-flink-jobs-1.0-SNAPSHOT.jar \
              --lineitem ${system.hadoop-3.path.input}/lineitem.tbl \
              --customer ${system.hadoop-3.path.input}/customer.tbl \
              --orders ${system.hadoop-3.path.input}/orders.tbl \
              --output ${system.hadoop-3.path.output}/results.txt
            ]]></value>
        </constructor-arg>
        <constructor-arg name="inputs">
            <set>
                <ref bean="dataset.tpch.static.lineitem" />
                <ref bean="dataset.tpch.static.customer" />
                <ref bean="dataset.tpch.static.orders" />
            </set>
        </constructor-arg>
        <constructor-arg name="outputs">
            <set value-type="org.peelframework.core.beans.data.ExperimentOutput">
                <ref bean="tpch.output"/>
            </set>
        </constructor-arg>
        <constructor-arg name="config" value=""/>
    </bean>

    <!--************************************************************************
    * Suites
    *************************************************************************-->

    <!-- suite for local development and testing -->
    <bean id="tpchq3.default" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list value-type="org.peelframework.core.beans.experiment.Experiment">
                <bean parent="experiment.tpchq3">
                    <constructor-arg name="name" value="tpchq3.default"/>
                    <constructor-arg name="config">
                        <value><![CDATA[
                                  system.flink.config.parallelism         = 1
                                  system.flink.config.numberOfTaskSlots   = 1
                                ]]></value>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <!-- suite for KALEAO -->
    <bean id="tpchq3.scale-out" class="org.peelframework.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <bean class="org.peelframework.core.beans.experiment.ExperimentSequence">
                <constructor-arg name="paramName" value="topXXX-X"/>
                <constructor-arg name="paramVals">
                    <list>
                        <value>top001-1</value>
                        <value>top001-2</value>
                        <value>top001-4</value>
                        <value>top002-1</value>
                        <value>top002-2</value>
                        <value>top002-4</value>
                        <value>top004-1</value>
                        <value>top004-2</value>
                        <value>top004-4</value>
                        <value>top008-1</value>
                        <value>top008-2</value>
                        <value>top008-4</value>
                        <value>top015-1</value>
                        <value>top015-2</value>
                        <value>top015-4</value>
                    </list>
                </constructor-arg>
                <constructor-arg name="prototypes">
                    <list value-type="org.peelframework.core.beans.experiment.Experiment">
                        <bean parent="experiment.tpchq3">
                            <constructor-arg name="name" value="tpchq3.__topXXX-X__"/>
                            <constructor-arg name="config">
                                <value><![CDATA[
                                  system.default.config.slaves            = ${env.slaves.__topXXX-X__.hosts}
                                  system.flink.config.parallelism         = ${env.slaves.__topXXX-X__.total.parallelism}
                                  system.flink.config.numberOfTaskSlots   = ${env.slaves.__topXXX-X__.per-node.numberOfTaskSlots}
                                ]]></value>
                            </constructor-arg>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </constructor-arg>

    </bean>

</beans>